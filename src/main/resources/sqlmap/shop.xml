<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yaouguoji.platform.mapper.ShopMapper">
    <resultMap id="shopEntity" type="com.yaouguoji.platform.entity.ShopEntity">
        <result column="Id" property="id"/>
        <result column="ShopName" property="shopName"/>
        <result column="BrandId" property="brandId"/>
        <result column="RegionId" property="regionId"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
        Id,
        ShopName,
        BrandId,
        RegionId,
        AddTime,
        UpdateTime
    </sql>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="shopEntity.id">
        INSERT INTO shop_test
        (
            ShopName,
            BrandId,
            RegionId,
            AddTime,
            UpdateTime
        )
        VALUES
        (
            #{shopEntity.shopName},
            #{shopEntity.brandId},
            #{shopEntity.regionId},
            NOW(),
            NOW()
        )
    </insert>

    <select id="findShopByShopId" parameterType="map" resultMap="shopEntity">
        SELECT
        <include refid="allFields"/>
        FROM shop_test
        WHERE Id=#{shopId}
    </select>

    <delete id="deleteShopInfoById">
        DELETE FROM shop_test WHERE Id=#{id}
    </delete>

    <update id="updateShopInfo" parameterType="map">
        UPDATE shop_test SET
            ShopName=#{shopEntity.shopName},
            BrandId=#{shopEntity.brandId},
            RegionId=#{shopEntity.regionId},
            UpdateTime=NOW()
        WHERE Id=#{shopEntity.id}
    </update>

</mapper>