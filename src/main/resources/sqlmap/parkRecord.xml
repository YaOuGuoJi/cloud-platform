<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yaouguoji.platform.mapper.ParkRecordMapper">
    <resultMap id="parkRecordEntity" type="com.yaouguoji.platform.entity.ParkRecordEntity">
        <result column="id" property="id"/>
        <result column="car_id" property="carId"/>
        <result column="active_type" property="activeType"/>
        <result column="add_time" property="addTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
       id,
       car_id,
       active_type,
       add_time,
       update_time
    </sql>
    <!-- 新增停车记录-->
    <insert id ="addParkRecord" parameterType="com.yaouguoji.platform.entity.ParkRecordEntity"
    useGeneratedKeys="true" keyProperty="parkRecord.id" >
        insert into park_record(car_id,active_type,add_time)
        values (#{parkRecord.carId},#{parkRecord.activeType},NOW())
    </insert>

    <!--修改记录-->
    <update id="updateParkRecord" parameterType="com.yaouguoji.platform.entity.ParkRecordEntity">
        update park_record set car_id=#{parkRecord.carId},active_type=#{parkRecord.activeType},update_time=NOW()
        where id=#{parkRecord.id}
    </update>

    <!--删除记录-->
    <delete id="deleteParkRecord" parameterType="java.lang.Integer">
        delete from park_record where id=#{id}
    </delete>

    <!--根据记录id查停车记录-->
    <select id="selectParkRecordById" parameterType="java.lang.Integer" resultMap="parkRecordEntity">
        select
        /*用到上面的sql标签，方便*/
        <include refid="allFields"/>
        from park_record where id=#{id}
    </select>

    <!--根据汽车id查询停车记录-->
    <select id="selectParkRecordByCarId" parameterType="java.lang.Integer" resultMap="parkRecordEntity">
         select id,car_id ,active_type,add_time,update_time from park_record where car_id=#{cid}
    </select>

    <!--查出所有停车记录-->
    <select id="selectParkRecordAll" resultMap="parkRecordEntity">
          select
          <include refid="allFields"/>
          from park_record
    </select>

    <!--查出现在停车数量-->
    <select id="selectCount" resultType="java.lang.Integer">
        select ((select count(car_id) from park_record WHERE active_type=0)-(select count(car_id)from park_record where active_type=1)) from dual
    </select>

</mapper>